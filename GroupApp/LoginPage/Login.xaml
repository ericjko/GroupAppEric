<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupApp.LoginPage.Login">
    <ContentPage.Content>
        <StackLayout>
            <Grid x:Name="LoginPage" IsVisible="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Text="Login Page" FontSize="Title" Grid.Row="0" Grid.ColumnSpan="3" HorizontalOptions="Center" />

                <Label Text="Username:" VerticalOptions="Center" Grid.Column="0" Grid.Row="1"/>
                <Entry x:Name="UsernameField"  Grid.Column="1" Grid.Row="1" VerticalOptions="FillAndExpand"/>
                <Label Text="Password:" VerticalOptions="Center"  Grid.Column="0" Grid.Row="2"/>
                <Entry x:Name="PasswordField" IsPassword="True"  Grid.Column="1" Grid.Row="2" VerticalOptions="FillAndExpand"/>

                <Button x:Name="Log" Text="Login"  Grid.Row="5" Grid.Column="0" VerticalOptions="FillAndExpand" Clicked="LogBtn"/>
                <Button x:Name="Reg" Text="Register"  Grid.Row="5" Grid.Column="2" VerticalOptions="FillAndExpand" Clicked="RegBtn"/>

                <Label x:Name="LogError" Grid.Row="6" Grid.ColumnSpan="3" HorizontalOptions="Center" TextColor="Red"/>
            </Grid>

            <Grid x:Name="RegPage" IsVisible="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Text="Register Page" FontSize="Title" Grid.Row="0" Grid.ColumnSpan="3" HorizontalOptions="Center" />

                <Label Text="Username:" VerticalOptions="Center" Grid.Column="0" Grid.Row="1"/>
                <Entry x:Name="UsernameField2"  Grid.Column="1" Grid.Row="1" VerticalOptions="FillAndExpand"/>
                <Label Text="Password:" VerticalOptions="Center"  Grid.Column="0" Grid.Row="2"/>
                <Entry x:Name="PasswordField2" IsPassword="True"  Grid.Column="1" Grid.Row="2" VerticalOptions="FillAndExpand"/>

                <Label Text="Retype Pass" VerticalOptions="Center"  Grid.Column="0" Grid.Row="3"/>
                <Entry x:Name="PasswordField3" IsPassword="True"  Grid.Column="1" Grid.Row="3" VerticalOptions="FillAndExpand"/>

                <Button x:Name="HaveAcc" Text="Have Acc"  Grid.Row="6" Grid.Column="0" VerticalOptions="FillAndExpand" Clicked="HveBtn"/>
                <Button x:Name="Register" Text="Register"  Grid.Row="6" Grid.Column="2" VerticalOptions="FillAndExpand" Clicked="Regacc"/>

                <Label x:Name="Error" Grid.Row="7" Grid.ColumnSpan="3" HorizontalOptions="Center" TextColor="Red"/>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
